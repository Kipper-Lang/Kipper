{
  "name": "@kipper/base",
  "description": "The Kipper programming language Compiler",
  "version": "0.0.5",
  "author": "Luna-Klatzer @Luna-Klatzer",
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4"
  },
  "devDependencies": {
    "typescript": "~4.5.5",
    "tslib": "~2.3.1",
    "ts-node": "~10.6.0",
    "uuid": "^8.3.2",
    "mkdirp": "^1.0.4",
    "chai": "^4.3.0",
    "eslint": "^7.32.0",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "ansi-regex": "^5.0.1",
    "prettier": "2.4.1",
    "tsify": "^5.0.4",
    "browserify": "~17.0.0",
    "watchify": "~4.0.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.17.60",
    "@types/chai": "^4.3.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "json-parse-even-better-errors": "2.3.1",
    "run-script-os": "^1.1.6"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "homepage": "https://wmc-ahif-2021.github.io/Kipper-Web/",
  "bugs": "https://github.com/Luna-Klatzer/Kipper/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luna-Klatzer/Kipper"
  },
  "keywords": [
    "language",
    "compiler"
  ],
  "files": [
    "lib",
    "src",
    "kipper-standalone.js",
    "Kipper.g4",
    "CHANGELOG.md"
  ],
  "license": "GPL-3.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "posttest": "npm run lint:fix",
    "pretest": "npm run build",
    "test": "nyc --extension .ts mocha --forbid-only \"**/*.test.ts\"",
    "build": "run-script-os",
    "build:linux:macos:default": "tsc && cp ./src/compiler/parser/*.interp ./lib/compiler/parser/ && cp ./src/compiler/parser/*.tokens ./lib/compiler/parser/",
    "build:windows": "tsc && copy .\\src\\compiler\\parser\\*.interp .\\lib\\compiler\\parser\\ /Y && copy .\\src\\compiler\\parser\\*.tokens .\\lib\\compiler\\parser\\",
    "browserify": "browserify src/kipper-standalone.ts -p [ tsify --noImplicitAny] > kipper-standalone.js",
    "lint": "npm run tslint && npm run prettier",
    "lint:fix": "npm run tslint:fix && npm run prettier",
    "prettier": "prettier --write ./src/",
    "tslint": "eslint src/**/*.ts --ext .ts --config .eslintrc",
    "tslint:fix": "eslint src/**/*.ts --fix --ext .ts --config .eslintrc && npm run prettier",
    "antlr4ts": "antlr4ts -visitor -o src/compiler/parser/ Kipper.g4"
  }
}
