  },
  "devDependencies": {
    "ts-node": "~10.7.0",
    "uuid": "^8.3.2",
    "mkdirp": "^1.0.4",
    "chai": "^4.3.0",
    "eslint": "^8.14.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "ansi-regex": "^6.0.1",
    "minimist": "^1.2.6",
    "prettier": "2.6.2",
    "tsify": "^5.0.4",
    "browserify": "~17.0.0",
    "watchify": "~4.0.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/test": "^1.2.8",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.30",
    "@types/chai": "4.3.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "json-parse-even-better-errors": "2.3.1",
