    "compiler",
    "backend"
  ],
  "files": [
    "LICENSE",
    "CHANGELOG.md"
  ],
  "license": "GPL-3.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "oclif": {
    "commands": "./kipper/cli/lib/commands"
  },
  "scripts": {
    "build": "pnpm run -r build",
    "pretest": "pnpm run build && pnpm run lint:fix",
    "test": "pnpm run test-no-rebuild",
    "test-no-rebuild": "nyc -x \"**/parser/**\" --reporter=json-summary --extension .ts mocha --forbid-only \"**/*.test.ts\"",
    "cov-badge": "coverage-badge-creator && pnpm run -r cov-badge",
    "antlr4ts": "pnpm run -r antlr4ts",
    "prettier": "pnpm run -r prettier",
    "lint": "pnpm run tslint",
    "lint:fix": "pnpm run tslint:fix",
    "tslint": "pnpm run -r tslint",
    "tslint:fix": "pnpm run -r tslint:fix",
    "posttslint": "pnpm run prettier",
    "browserify": "pnpm --filter \"@kipper/core\" run browserify",
    "start": "pnpm --filter \"@kipper/cli\" run start",
    "bump": "run-script-os",
    "bump:linux:macos:default": "./bump.sh",
    "bump:windows": "powershell.exe .\\bump.ps1"
  }
}
