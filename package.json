{
  "name": "kipper_lang",
  "version": "0.0.1",
  "description": "The Kipper Programming language",
  "keywords": [
    "language",
    "compiler"
  ],
  "scripts": {
    "prebuild": "npm run tslint",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "rebuild": "npm run build",
    "lint": "npm run tslint && npm run prettier",
    "lint:fix": "npm run tslint:fix && npm run prettier",
    "prettier": "prettier --write ./src/",
    "tslint": "eslint src/**/*.ts",
    "tslint:fix": "npm run lint -- --fix",
    "test": "ts-mocha -p tsconfig.json --recursive src/__tests__/**/*.ts",
    "posttest": "npm run lint:fix",
    "prestart": "npm run rebuild",
    "start": "node .",
    "antlr4ts": "antlr4ts -visitor grammar/Kipper.g4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Luna-Klatzer/Kipper"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "ts-node": "^3.3.0",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^10.17.48",
    "chai": "^4.3.4",
    "mocha": "^9.1.2",
    "prettier": "^2.4.1",
    "ts-mocha": "^8.0.0",
    "eslint": "^7.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "typescript": "~4.1.2"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": false
  }
}
