{
  "name": "kipper_lang",
  "version": "0.0.1",
  "description": "The Kipper Programming language",
  "license": "GPL-3.0",
  "keywords": [
    "language",
    "compiler"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12.0"
  },
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "npm run tslint && npm run prettier:check",
    "lint:fix": "npm run tslint:fix && npm run prettier:fix",
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "tslint": "tslint **/*.ts",
    "tslint:fix": "npm run tslint -- --fix",
    "pretest": "npm run rebuild",
    "test": "mocha -r ts-node/register --recursive --allow-console-logs \"./dist/__tests__/**/*.js\"",
    "posttest": "npm run lint",
    "test:dev": "mocha -r ts-node/register --recursive --allow-console-logs \"./dist/__tests__/**/*.js\" && npm run posttest",
    "premigrate": "npm run build",
    "migrate": "node ./dist/migrate",
    "rebuild": "npm run build",
    "prestart": "npm run rebuild",
    "start": "node ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Luna-Klatzer/Kipper"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "ts-node": "^10.2.1",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^10.17.48",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^8.4.0",
    "prettier": "^2.4.1",
    "tslint": "^5.20.0",
    "typescript": "~4.1.2"
  }
}
