{
  "extends": ["eslint:recommended"],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "max-params": 0,
    "no-unused-vars": 1,
    "no-warning-comments": 0,
    "no-useless-catch": 1,
    "comma-dangle": 0,
    "object-curly-spacing": 0,
    "quotes": 0,
    "semi": 2
  },
  "env": {
    "node": true,
    "mocha": true,
    "commonjs": true
  },
  "globals": {
    "BufferEncoding": true
  }
}
