{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		// Since we are unable to enforce this on the auto-generated Antlr4 files, we will ignore this
		"noImplicitOverride": false,
		"outDir": "./lib",
		"rootDir": "./src",
		"target": "es2016",
		"lib": [
			"ES7" // ES7 -> ES2016
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"lib",
		"dist",
		"**/*.spec.ts"
	],
	"files": []
}
