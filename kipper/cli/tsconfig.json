{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./lib",
		"rootDir": "./src",
		"target": "es2020",
		"module": "CommonJS",
		"moduleResolution": "node16",
		"noImplicitOverride": false,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": [
			"ES2020"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"lib",
		"dist",
		"**/*.spec.ts"
	],
	"files": []
}
