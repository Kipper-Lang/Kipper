<!-- Page EJS Config -->
<% let title = "Welcome to Kipper!"; %>
<% let description = "The new customisable and easy to use type-safe language for the web and Node.js! "; %>
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/meta-head', { title: title, description: description }) %>
    <link rel="stylesheet" href="<%= rootDir %>/css/home.scss" />
</head>
<body>
<%- include('./partials/default-body-top', { rootDir: rootDir }) %>

<div id="main-frame">
    <div id="actual-content">
        <!-- The top element: menu and search bar -->
        <%- include('./partials/header-nav-bar', { isHomepage: true, header: false, locale: locale }) %>

        <!-- Main Content, where the text is located and the items unique to this site are defined -->
        <div class="text-page-content-container">
            <section id="homepage-content">
                <ul class="no-style-list flex-row flex-parent-container flex-end">
                    <li>
                        <section id="welcome-text" class="flex-parent-container flex-column flex-start">
                            <h2 id="welcome-header" class="super-large-header"><%- locale["values"]["homepage"]["welcome"] %></h2>
                            <p id="welcome-description"><%- locale["values"]["homepage"]["description"] %></p>
                            <p id="welcome-buttons" class="flex-parent-container flex-row flex-start">
                                <a href="<%= rlc %>/playground.html" class="button"> <%- locale["values"]["homepage"]["play-button"] %> </a>
                                <a href="<%= rootDir %>/docs/index.html" class="inverted-button"> <%- locale["values"]["homepage"]["docs-button"] %> </a>
                            </p>
                        </section>
                    </li>
                    <li>
                        <a href="./playground.html">
                            <img id="welcome-image" src="<%= rootDir %>/img/carbon/carbon-code-snippet.png" alt="" />
                        </a>
                    </li>
                </ul>
            </section>
        </div>
        <!-- Footer bar - contains some links and general copyright notice -->
        <%- include('./partials/footer') %>
    </div>
</div>

<!-- Overlay for displaying search results -->
<%- include('./partials/search-bar-overlay') %>
</body>
</html>
