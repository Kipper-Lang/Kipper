<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../meta-head', { title: title, description: description }) %>
    <link rel="stylesheet" href="<%= rootDir %>/css/docs.scss" />
</head>
<body>
<%- include('../default-body-top', { rootDir: rootDir }) %>

<!-- Docs specific scripts -->
<script defer type="module" src="<%= rootDir %>/js/docs.ts"></script>

<% let docsRoot = `${rootDir}/docs`; %>
<% let thisVersion = `${docsRoot}/${docsVersion}`; %>
<% let thisVersionFile = `${thisVersion}/${filename}`; %>
<% let thisVersionIndex = `${thisVersion}/index.html`; %>
<% let thisFile = `${rootDir}${urlParentDir}/${filename}`; %>

<div id="main-frame">
    <div id="actual-content">
        <!-- The top element: menu and search bar -->
        <%- include('../header-nav-bar', { isHomepage: false, header: false, title: title, description: description }) %>

        <!-- Main Content, where the text is located and the items unique to this site are defined -->
        <div class="flex-parent-container flex-fill-to-parent">
            <ul class="no-style-list flex-parent-container flex-row flex-fill-to-parent">
                <li id="docs-sidebar-nav-wrapper">
                    <%- include('./sidebar-nav', {
                        sidebarNav: sidebarNav,
                        header: false,
                        title: title,
                        description: description,
                        thisFile: thisFile,
                        docsRoot: docsRoot,
                        existsSync: existsSync,
                        absoluteSrcRootDir: absoluteSrcRootDir,
                        thisNavTreeItem: thisNavTreeItem,
                        thisVersionIndex: thisVersionIndex,
                    }) %>
                </li>
                <li id="docs-page-content-wrapper">
                    <!-- Phone-specific navigation bar, for the top of the page -->
                    <%- include('./page-phone-top-nav', {
                        sidebarNav: sidebarNav,
                        thisFile: thisFile,
                        rootDir: rootDir,
                        thisVersionIndex: thisVersionIndex,
                        absoluteSrcRootDir: absoluteSrcRootDir,
                        thisNavTreeItem: thisNavTreeItem,
                        isIndexFile: isIndexFile,
                        isHiddenFile: isHiddenFile,
                    }) %>
                    <section id="docs-content" class="shadowed-box">
                        <nav id="docs-page-header">
                            <ul id="docs-nav-current-page-path" class="flex-row no-style-list">
                                <%- include('./page-nav-path', {
                                    sidebarNav: sidebarNav,
                                    thisFile: thisFile,
                                    rootDir: rootDir,
                                    thisVersionIndex: thisVersionIndex,
                                    absoluteSrcRootDir: absoluteSrcRootDir,
                                    thisNavTreeItem: thisNavTreeItem,
                                    isIndexFile: isIndexFile,
                                    isHiddenFile: isHiddenFile,
                                }) %>
                            </ul>
                            <a
                                id="edit-page-on-github"
                                href="<%= editPath %>"
                                title="Edit this page on GitHub"
                            >
                                <i class="fa-brands fa-github"></i>
                                <p>Edit page</p>
                            </a>
                        </nav>
                        <article class="markdown-content">
                            <%- markdownContent %>
                        </article>
                    </section>
                </li>
            </ul>
        </div>
        <!-- Footer bar - contains some links and general copyright notice -->
        <%- include('../footer') %>
    </div>
</div>

<!-- Overlay for displaying search results -->
<%- include('../search-bar-overlay') %>
</body>
</html>
