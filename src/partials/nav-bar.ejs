<% let relativePath = isNestedDir ? ".." : "."; %>

<header id="home-page-header" class="page-header">
    <nav id="header-nav-bar">
        <ul>
            <li>
                <a  href="index.html"
                    class="
                    no-style-list
                    flex-row
                    flex-parent-container
                    flex-center
                    kipper-logo-container
                    "
                >
                    <img id="kipper-logo" src="<%= relativePath; %>/img/base_head.png" alt="" />
                </a>
                <a class="
                         underline-button kipper-logo-identifier
                         "
                   href="<%= relativePath; %>/index.html"
                >
                    <h1>Kipper</h1>
                </a>
                <a class="version-identifier"
                   href="https://github.com/Luna-Klatzer/Kipper/releases/tag/v<%= version; %>">
                    <small>v<%= version; %></small>
                </a>
            </li>
            <li>
                <a
                        href="<%= relativePath; %>/download.html"
                        class="
                        underline-button
                        <%= filename.endsWith("download.html") ? "selected-nav-page" : ""; %>
                        top-nav-menu-item
                        top-nav-button
                        "
                ><h4>Downloads</h4></a
                >
            </li>
            <li>
                <a
                        href="<%= relativePath %>/docs/index.html"
                        class="
                        underline-button
                        <%= isDocsFile ? "selected-nav-page" : ""; %>
                        top-nav-menu-item
                        top-nav-button
                        "
                ><h4>Docs</h4></a
                >
            </li>
            <li>
                <a
                        href="<%= relativePath %>/playground.html"
                        class="
                        underline-button
                        <%= filename.endsWith("playground.html") ? "selected-nav-page" : ""; %>
                        top-nav-menu-item
                        top-nav-button
                        "
                >
                    <h4>Playground</h4>
                </a>
            </li>
            <li>
                <a href="<%= relativePath %>/changelog.html"
                   class="
                        underline-button
                        <%= filename.endsWith("changelog.html") ? "selected-nav-page" : ""; %>
                        top-nav-menu-item
                        top-nav-button
                        "
                >
                    <h4>Changelog</h4>
                </a>
            </li>
        </ul>
        <div id="search-bar-wrapper">
            <ul>
                <li>
                    <i id="search-icon" class="fa-solid fa-magnifying-glass"></i>
                </li>
                <li id="search-bar">
                    <label for="search-bar-input"></label>
                    <input
                            id="search-bar-input"
                            type="search"
                            placeholder="Search..."
                            spellcheck="false"
                    />
                </li>
            </ul>
        </div>
    </nav>
    <div
            id="header-description-content"
            class="text-page-content-container"
    >
        <%- typeof header !== undefined && header ? include('./header') : "" %>
    </div>
</header>
