{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "removeComments": true,
    "noImplicitAny": true,
		"noImplicitOverride": false,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
		"outDir": "./lib",
    "target": "es2016",
    "lib": [
      "ES7",
    ]
    // ES7 -> ES2016
  },
	"ts-node": {
		"compilerOptions": {
			"rootDir": ".",
			"sourceRoot": ".",
			"sourceMap": true,
		},
		"files": true
	},
  "exclude": [
    "node_modules",
    "lib",
    "dist",
		"test",
		// Ignore all spec files
		"**/*.spec.ts",
		// Child modules should be ignored, as they compile themselves.
		"kipper/core",
		"kipper/cli",
		"kipper/web",
		"kipper/target-js",
		"kipper/target-ts",
	],
	"files": [
		"./kipper/index.ts",
	]
}
