{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "removeComments": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "kipper",
    "strict": true,
    "target": "es2020",
    "lib": [
      "ES7"
    ]
    // ES7 -> ES2016
  },
  "include": [
    "kipper/core/src/**/*",
    "kipper/cli/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}
