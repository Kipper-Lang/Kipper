{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDir": "./kipper",
		"outDir": "./lib",
		"strict": true,
    "target": "es2016",
    "lib": [
      "ES2016"
    ]
    // ES7 -> ES2016
  },
  "exclude": [
    "node_modules",
    "lib",
    "dist",
		"test",
		// Ignore all spec files
		"**/*.spec.ts",
		// Child modules should be ignored, as they compile themselves.
		"kipper/core",
		"kipper/cli",
		"kipper/web",
		"kipper/target-js",
		"kipper/target-ts",
	],
	"files": [
		"./kipper/index.ts"
	]
}
