{
  "parserOptions": {
    "sourceType": "module"
  },
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
    "lib": ["ES7"] // ES7 -> ES2016
  },
  "include": [
    "src/**/*"
  ]
}
