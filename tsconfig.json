{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "removeComments": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2020",
    "lib": [
      "ES7"
    ]
    // ES7 -> ES2016
  },
  "include": [
    "kipper/base/src/**/*",
    "kipper/base/src/compiler/parser/*.*",
    "kipper/cli/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
