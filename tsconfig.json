    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "removeComments": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "rootDir": "kipper",
    "strict": true,
    "target": "es2020",
    "lib": [
      "ES7"
    ]
    // ES7 -> ES2016
  },
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}
