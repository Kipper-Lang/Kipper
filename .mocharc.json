{
  "extension": ["ts"],
  "timeout": 15000,
  "exit": true,
  "recursive": true,
  "reporter": "spec",
  "require": [
		"ts-node/register",
		"source-map-support/register"
	],
	"spec": [
		"**/*.test.ts"
	],
  "watch-files": [
    "test/**/*.ts",
    "kipper/cli/src/**/*.ts",
    "kipper/core/src/**/*.ts"
  ]
}
