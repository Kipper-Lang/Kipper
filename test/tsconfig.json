{
  "extends": "../tsconfig.json",
  "compilerOptions": {
		"sourceMap": true,
    "noEmit": true,
    "rootDir": ".",
    "noImplicitAny": false
  },
  "files": [
    "../kipper/*.ts",
    "../kipper/core/src/**/*.ts",
    "../kipper/cli/src/**/*.ts",
  ],
  "ts-node": {
    "files": true
  },
  "references": [
    {"path": "../kipper"},
    {"path": "../kipper/core"},
    {"path": "../kipper/cli"}
  ],
  "include": [
    "./**/*.ts"
  ],
	"exclude": [
		"node_modules",
		"lib",
		"dist",
		"**/*.spec.ts",
		"**/*.d.ts"
	]
}
